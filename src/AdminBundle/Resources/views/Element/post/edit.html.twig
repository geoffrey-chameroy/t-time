<div class="ibox">
    <div class="ibox-title">
        <h5>Post edition</h5>
        <div class="ibox-tools"></div>
    </div>
    <div class="ibox-content">
        {{ form_start(form) }}
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        {{ form_label(form.title, "Post title", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        {{ form_label(form.category, "Post category", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        {{ form_label(form.content, "Post content", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
            {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
</div>
