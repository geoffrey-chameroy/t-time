<div class="ibox" data-id_post="{{ post.id }}">
    <div class="ibox-content">
        <div class="pull-right">
            <button class="btn btn-primary btn-xs" type="button">{{ post.category.label }}</button>
        </div>
        <div class="text-center article-title">
            <span class="text-muted"><i class="fa fa-clock-o"></i> {{ post.publishedAt|date('d/m/Y') }}</span>
            <h1>{{ post.title }}</h1>
        </div>
        <div class="row">
            <div class="col-lg-12">
                {{ post.content|raw }}
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-6">
                {#
                <h5>Tags:</h5>
                {% for tag in post.tags %}
                    <button class="btn btn-white btn-xs" type="button">{{ tag.label }}</button>
                {% endfor %}
                #}
            </div>
            <div class="col-md-6">
                <div class="small text-right">
                    <h5>Stats:</h5>
                    <div> <i class="fa fa-comments-o"> </i> {{ post.comments|length }} comments </div>
                    <i class="fa fa-eye"> </i> {{ post.view }} views
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                {{ render(controller("AppBundle:Comment:add", {id: post.id})) }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                {{ render(controller("AppBundle:Comment:list", {postId: post.id})) }}
            </div>
        </div>
    </div>
</div>