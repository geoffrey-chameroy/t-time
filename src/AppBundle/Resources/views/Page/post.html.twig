{% extends 'AppBundle::base.html.twig' %}

{% block title parent() ~ ' - ' ~ post.title %}

{% block navigation %}
    <h2>{{ post.title }}</h2>
    <ol class="breadcrumb">
        <li><a href="{{ path('app_home') }}">Home</a></li>
        <li><a href="{{ path('app_category', {'slug': post.category.slug}) }}">{{ post.category.label }}</a></li>
        <li class="active"><strong>{{ post.title }}</strong></li>
    </ol>
{% endblock %}

{% block content %}
    <div class="wrapper wrapper-content animated fadeInRight article">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    {{ render(controller("AppBundle:Post:full", {id: post.id})) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
