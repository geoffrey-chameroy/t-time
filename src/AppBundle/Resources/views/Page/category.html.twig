{% extends 'AppBundle::base.html.twig' %}

{% block title parent() ~ ' - ' ~ category.label %}

{% block navigation %}
    <h2>{{ category.label }}</h2>
    <ol class="breadcrumb">
        <li><a href="{{ path('app_home') }}">Home</a></li>
        <li><strong>{{ category.label }}</strong></li>
    </ol>
{% endblock %}

{% block content %}
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    {{ render(controller("AppBundle:Post:categoryList", {slug: category.slug})) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
